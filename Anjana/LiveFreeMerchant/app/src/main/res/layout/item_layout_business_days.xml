<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTabBlack"
                android:orientation="horizontal"
                android:padding="8dp">

    <com.livefree.merchant.util.TextviewReg
            android:id="@+id/tv_item_days_working_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/stroke_border_radius_corner_white"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="Mon"
            android:inputType="textCapSentences"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

    <com.livefree.merchant.util.TextviewReg
            android:id="@+id/tv_item_days_opening_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dashed_line"
            android:drawableRight="@drawable/ic_arrow_down"
            android:gravity="center"
            android:padding="6dp"
            android:text="9AM"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

    <com.livefree.merchant.util.TextviewReg
            android:id="@+id/tv_item_days_closing_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/dashed_line"
            android:drawableRight="@drawable/ic_arrow_down"
            android:gravity="right"
            android:padding="6dp"
            android:textAllCaps="true"
            android:text="6PM"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
</RelativeLayout>