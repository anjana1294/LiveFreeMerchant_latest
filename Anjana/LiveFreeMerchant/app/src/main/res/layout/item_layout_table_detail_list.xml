<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:background="@color/colorBackgroundBlack">

    <com.livefree.merchant.util.TextviewReg
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Table 1"
            android:id="@+id/tv_item_table"
            android:background="@color/colorBlack"
            android:padding="20dp"
            android:layout_marginBottom="4dp"
            android:drawableRight="@drawable/ic_arrow_down"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:textSize="18sp"
    ></com.livefree.merchant.util.TextviewReg>
    <LinearLayout
            android:id="@+id/table_detail_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:background="@drawable/addtable_bg">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
        >
            <com.livefree.merchant.util.TextviewReg
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chair"
                    android:id="@+id/tv_chair"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"/>
            <com.livefree.merchant.util.TextviewReg
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tv_chair_no"
                    android:layout_below="@id/tv_chair"
                    android:textSize="16sp"
                    android:textColor="@color/colorGrey"/>


            <com.livefree.merchant.util.TextviewReg
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/servers"
                    android:textColor="@color/colorWhite"
                    android:layout_toLeftOf="@id/ll_image"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:id="@+id/tv_server"
                    android:layout_marginRight="8dp"
            />
            <com.livefree.merchant.util.TextviewReg
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hanrey"
                    android:textColor="@color/colorGrey"
                    android:layout_toLeftOf="@id/ll_image"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:id="@+id/tv_server_name"
                    android:layout_below="@id/tv_server"
                    android:layout_marginRight="8dp"
            />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:id="@+id/ll_image"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more"
                        android:id="@+id/iv_edit"
                />
            </LinearLayout>
        </RelativeLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey"></View>

        <com.livefree.merchant.util.TextviewReg
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Booked"
                android:id="@+id/tv_booked"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/colorLightGreen"/>
    </LinearLayout>


</LinearLayout>