<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorToolbar</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <item name="colorAccent">@color/colorBackgroundBlack</item>
        <item name="android:actionMenuTextColor">@color/colorBlack</item>
    </style>

    <style name="LiveFree" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorToolbar</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <item name="colorAccent">@color/colorOrange</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorGrey</item>
        <item name="colorControlHighlight">@color/colorGrey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:actionMenuTextColor">@color/colorBlack</item>

    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/colorTabBlack</item>
        <item name="android:textColor">@color/colorOrange</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LiveFree..AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="LiveFree.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="LiveFree.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="LiveFree.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>



</resources>
